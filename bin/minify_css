#!/usr/bin/env ruby

DEBUG = true

require 'seabright'

Seabright::Bundle.set_static_path(Dir.pwd + '/')

Seabright::Bundle.new(:output,:inline) do
	ARGV.each do |file|
		css ARGV[0]
	end
end

code = Seabright::Bundle[:output].stylesheet_code
if $return == 0
	puts code
else
	puts "Fix errors above before compressing!"
end
